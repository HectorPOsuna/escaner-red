<Window x:Class="NetworkScanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Scanner &amp; Monitor" Height="450" Width="600"
        Icon="app_icon.ico"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="#FAFAFA">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Config -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
            <RowDefinition Height="*"/>    <!-- Progress/Results -->
        </Grid.RowDefinitions>

        <!-- 1. Configuración -->
        <GroupBox Grid.Row="0" Header="Configuración de Escaneo">
            <StackPanel>
                <TextBlock Text="Subred a escanear:" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="TxtSubnet" 
                             Grid.Column="0"
                             Text="192.168.100." 
                             FontSize="16" FontFamily="Consolas"
                             ToolTip="Ingrese el prefijo de la red (ej: 192.168.1.)"/>
                    
                    <TextBlock Grid.Column="1" Text="(Ej: 192.168.100.)" 
                               VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray" FontSize="12"/>
                </Grid>

                <TextBlock Text="Modo de Operación:" FontSize="12" Foreground="#666" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RbManual" Content="Escaneo Manual" IsChecked="True" GroupName="Mode" Margin="0,0,20,0"/>
                    <RadioButton x:Name="RbMonitor" Content="Monitoreo en Tiempo Real (Background)" GroupName="Mode"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 2. Acciones -->
        <Grid Grid.Row="1" Margin="0,10,0,20">
            <Button x:Name="BtnScan" 
                    Content="INICIAR ESCANEO" 
                    Height="50" 
                    FontSize="16" FontWeight="Bold"
                    Background="#2E7D32" Foreground="White"
                    BorderThickness="0"
                    Click="BtnScan_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#A5D6A7"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!-- 3. Progreso y Estado -->
        <GroupBox Grid.Row="2" Header="Estado del Escaneo" VerticalAlignment="Stretch">
            <StackPanel IsEnabled="True">
                <Grid Margin="0,0,0,10">
                    <TextBlock x:Name="StatusText" Text="Listo para iniciar." FontSize="14" FontWeight="Bold" Foreground="#333"/>
                    <TextBlock x:Name="DetailText" Text="" HorizontalAlignment="Right" Foreground="Gray"/>
                </Grid>

                <ProgressBar x:Name="ScanProgress" 
                             Height="25" 
                             Minimum="0" Maximum="100" Value="0"
                             Foreground="#4CAF50" Background="#E8F5E9" BorderThickness="0"/>
                
                <TextBlock x:Name="ProgressPercentage" 
                           Text="0%" HorizontalAlignment="Center" Margin="0,-22,0,0" 
                           FontWeight="Bold" Foreground="#333"/>
                
                <ScrollViewer Height="100" Margin="0,15,0,0" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ResultSummary" 
                               Text="Los resultados aparecerán aquí al finalizar..." 
                               TextWrapping="Wrap" Foreground="#555"/>
                </ScrollViewer>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
