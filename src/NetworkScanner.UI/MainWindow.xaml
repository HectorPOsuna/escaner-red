<Window x:Class="NetworkScanner.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Scanner &amp; Monitor" Height="500" Width="650"
        Icon="app_icon.ico"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Background="#FAFAFA"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    
    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header/Mode -->
            <RowDefinition Height="Auto"/> <!-- Config -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
            <RowDefinition Height="*"/>    <!-- Progress/Results -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- 0. Header -->
        <Border Grid.Row="0" Margin="0,0,0,15" Padding="0,0,0,10" BorderBrush="#EEE" BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Modo de Operación" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RbManual" Content="Escaneo de Red (Manual)" IsChecked="True" GroupName="Mode" Margin="0,0,20,0" Checked="Mode_Checked"/>
                    <RadioButton x:Name="RbMonitor" Content="Monitoreo de Cliente (Tiempo Real)" GroupName="Mode" Checked="Mode_Checked"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 1. Configuración de Escaneo -->
        <GroupBox x:Name="GroupScanConfig" Grid.Row="1" Header="Configuración de Red">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Subnet -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Subred:" FontSize="12" Foreground="#666"/>
                        <Grid>
                            <TextBox x:Name="TxtSubnet" FontFamily="Consolas" TextChanged="Txt_TextChanged" Padding="5"/>
                            <TextBlock x:Name="PlaceholderSubnet" Text="ej: 192.168.1." IsHitTestVisible="False" Foreground="Gray" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Start IP -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="IP Inicio:" FontSize="12" Foreground="#666"/>
                        <Grid>
                            <TextBox x:Name="TxtIpStart" FontFamily="Consolas" TextChanged="Txt_TextChanged" Padding="5"/>
                            <TextBlock x:Name="PlaceholderStart" Text="ej: 10" IsHitTestVisible="False" Foreground="Gray" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="3" Text="—" VerticalAlignment="Center" Margin="5,15,5,0" Foreground="Gray"/>
                    
                    <!-- End IP -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="IP Fin:" FontSize="12" Foreground="#666"/>
                        <Grid>
                            <TextBox x:Name="TxtIpEnd" FontFamily="Consolas" TextChanged="Txt_TextChanged" Padding="5"/>
                            <TextBlock x:Name="PlaceholderEnd" Text="ej: 50" IsHitTestVisible="False" Foreground="Gray" Opacity="0.5" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                <TextBlock Text="* Configure la subred y el rango de IPs a escanear." FontSize="11" Foreground="Gray" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 1b. Configuración Monitor (Visual Only) -->
        <GroupBox x:Name="GroupMonitorConfig" Grid.Row="1" Header="Estado del Agente" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Hostname:" FontWeight="Bold"/>
                    <TextBlock x:Name="LblHostname" Text="-" Margin="0,0,0,10"/>
                    <TextBlock Text="Sistema Operativo:" FontWeight="Bold"/>
                    <TextBlock x:Name="LblOS" Text="-"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="IP Local:" FontWeight="Bold"/>
                    <TextBlock x:Name="LblIP" Text="-" Margin="0,0,0,10"/>
                    <TextBlock Text="Estado:" FontWeight="Bold"/>
                    <TextBlock x:Name="LblAgentStatus" Text="Inactivo" Foreground="Red"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 2. Acciones -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Button x:Name="BtnAction" 
                    Content="INICIAR ESCANEO" 
                    Height="45" 
                    FontSize="15" FontWeight="Bold"
                    Background="#2E7D32" Foreground="White"
                    BorderThickness="0"
                    Click="BtnAction_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- 3. Progreso y Resultados -->
        <GroupBox Grid.Row="3" Header="Actividad" VerticalAlignment="Stretch">
            <Grid>
                <!-- VISTA ESCANER -->
                <StackPanel x:Name="PanelScanner" Visibility="Visible">
                    <Grid Margin="0,0,0,5">
                        <TextBlock x:Name="StatusText" Text="Listo." FontWeight="Bold"/>
                        <TextBlock x:Name="DetailText" Text="" HorizontalAlignment="Right" Foreground="#666"/>
                    </Grid>
                    <ProgressBar x:Name="ScanProgress" Height="20" Minimum="0" Maximum="100" Value="0" Foreground="#4CAF50"/>
                    <TextBlock x:Name="ProgressPercentage" Text="0%" HorizontalAlignment="Center" Margin="0,-18,0,0" FontWeight="Bold"/>
                    
                    <ScrollViewer Height="120" Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                         <TextBox x:Name="TxtResultLog" IsReadOnly="True" BorderThickness="0" Background="Transparent" TextWrapping="Wrap" Text="Los resultados se mostrarán aquí..."/>
                    </ScrollViewer>
                </StackPanel>

                <!-- VISTA MONITOR -->
                <StackPanel x:Name="PanelMonitor" Visibility="Collapsed">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- CPU Ring (Simulado con texto por ahora) -->
                        <Border Grid.Column="0" BorderBrush="#EEE" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,5,0">
                            <StackPanel>
                                <TextBlock Text="CPU" HorizontalAlignment="Center" Foreground="#666"/>
                                <TextBlock x:Name="ValCpu" Text="0%" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1976D2"/>
                            </StackPanel>
                        </Border>

                        <!-- RAM Ring -->
                        <Border Grid.Column="1" BorderBrush="#EEE" BorderThickness="1" CornerRadius="4" Padding="10" Margin="5,0,0,0">
                            <StackPanel>
                                <TextBlock Text="RAM Disponible" HorizontalAlignment="Center" Foreground="#666"/>
                                <TextBlock x:Name="ValRam" Text="0 MB" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#388E3C"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="4" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Disco Principal (C:)" Foreground="#666" Margin="0,0,0,5"/>
                            <ProgressBar x:Name="PbDisk" Height="15" Value="0" Maximum="100" Foreground="#FFA000"/>
                            <TextBlock x:Name="ValDisk" Text="0 GB libres" FontSize="11" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                    
                    <TextBlock Text="La aplicación se minimizará a la bandeja del sistema al cerrar." 
                               FontSize="11" Foreground="Gray" HorizontalAlignment="Center" Margin="0,15,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
